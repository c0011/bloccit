<h1><%= @sponsoredPost.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsoredPost.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_sponsored_post_path(@sponsoredPost.topic, @sponsoredPost), class: 'btn btn-success' %>
    <%= link_to "Delete Sponsored Post", [@sponsoredPost.topic, @sponsoredPost], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
  </div>
</div>
